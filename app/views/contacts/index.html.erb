<div class="row page-header">
  <div class="col-md-4">

    <div>
      <h1>
        Contacts
        <a href="/contacts/new" class="btn btn-md btn-success">Add</a>
      </h1>
    </div>
  </div>
  <div class="col-md-4">
  </div>
  <div class="col-md-4 hidden-sm hidden-xs">
        <div class="panel panel-default">
      <div class="panel-body">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-6">
              <h4>
                Making a change?</h4></div>
                <div class="col-md-6">
                    <h4><a href="/moves/new" class="btn btn-md btn-info">New Move</a></h4>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped table-hover">
          <tr>
            <th>Name</th>
            <th>Notes</th>
            <th class="text-center">Phone</th>
            <th class="text-center">Email</th>
            <th class="text-center">Address</th>

            <th class="text-center">Actions</th>
          </tr>

          <% @contacts.each do |contact| %>
          <tr>
            <td><a href="/contacts/<%= contact.id %>"><%= contact.name %></a></td>
            <td>
              <%= truncate(contact.notes, :length => 75) %>
            </td>
            <td class="text-center">
              <% if contact.has_phone == true %>
              <font color="green"><i class="fa fa-check"></i></font>
              <% end %>
            </td>
            <td class="text-center">
              <% if contact.has_email == true %>
              <font color="green"><i class="fa fa-check"></i></font>
              <% end %>
            </td>
            <td class="text-center">
              <% if contact.has_address == true %>
              <font  color="green"><i class="fa fa-check"></i></font>
              <% end %>
            </td>

            <td class="text-center">
              <a href="/contacts/<%= contact.id %>" class="btn btn-primary"><i class="fa fa-fw fa-plus-square-o"></i></a>
              <a href="/contacts/<%= contact.id %>/edit" class="btn btn-warning"><i class="fa fa-fw fa-pencil-square-o"></i></a>
              <a href="/delete_contact/<%= contact.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-fw fa-trash-o"></i></a>
            </td>
          </tr>
          <% end %>
        </table>


      </div>
    </div>


